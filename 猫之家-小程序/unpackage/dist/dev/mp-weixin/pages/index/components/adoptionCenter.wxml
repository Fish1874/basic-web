<view class="adoption"><block wx:for="{{listAdop}}" wx:for-item="item" wx:for-index="index"><view class="adoption__box"><image src="{{item.img}}" mode="aspectFill"></image><view class="adoption__box__content"><view class="content-title"><text class="content-title-text">{{item.title}}</text><block wx:if="{{item.top}}"><text class="content-title-tag">置顶</text></block></view><view class="content-site"><view>地址：</view><text>{{item.site}}</text></view><view class="content__tag"><view class="content__tag-left"><block wx:for="{{item.tag}}" wx:for-item="list" wx:for-index="index" wx:key="*this"><text space="nbsp">{{"#  "+list}}</text></block></view><view class="content__tag-right"><image src="{{item.ico}}" mode="aspectFit"></image><text class="{{[(item.collect===false)?'textStyle':'']}}">{{item.collect?'已收藏':'收藏'}}</text></view></view></view></view></block></view>