<view class="petShop"><block wx:for="{{listPet}}" wx:for-item="item" wx:for-index="index"><view class="petShop-box"><view class="petShop-box__img"><image src="{{item.img}}" mode="widthFix"></image></view><view class="petShop-box-content"><view class="petShop-box-content__title">{{item.title}}</view><view class="petShop-box-content__site"><view>地址：</view><text>{{item.site}}</text></view><view class="petShop-box-tag"><block wx:for="{{item.tag}}" wx:for-item="list" wx:for-index="index" wx:key="*this"><text space="nbsp">{{"# "+list}}</text></block></view><view class="petShop-box-date"><view class="petShop-box-date__look">{{"浏览："+item.look}}</view><view class="petShop-box-date__day">{{"发布："+item.date}}</view></view></view></view></block></view>