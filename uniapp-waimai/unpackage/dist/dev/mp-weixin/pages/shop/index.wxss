.shop {
  background-color: #F9FAFC;
}
.shop .black {
  padding: 0 16px;
}
.shop .black image {
  width: 20px;
  height: 20px;
}
.shop .top {
  position: relative;
  width: 100%;
  height: 180px;
}
.shop .top image {
  width: 100%;
  height: 100%;
}
.shop .top .mask {
  position: absolute;
  top: 0px;
  left: 0;
  right: 0;
  bottom: 0;
  width: 100%;
  height: 100%;
  background-color: #000;
  opacity: 0.3;
}
.shop .sticky {
  position: -webkit-sticky;
  position: sticky;
  top: 20px;
}
.shop .shop-area {
  position: relative;
  padding: 16px;
  width: 100%;
  height: 114px;
  background-color: #fff;
  box-sizing: border-box;
}
.shop .shop-area .shop-title {
  font-weight: 600;
  font-size: 18px;
}
.shop .shop-area .shop-photo {
  position: absolute;
  top: -48px;
  right: 16px;
}
.shop .shop-area .shop-photo image {
  width: 80px;
  height: 80px;
}
.shop .shop-area .shop-score {
  -webkit-box-pack: start;
  -webkit-justify-content: flex-start;
          justify-content: flex-start;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  margin: 10px 0;
}
.shop .shop-area .shop-score__fraction {
  font-size: 14px;
  color: #F5A623;
}
.shop .shop-area .shop-score__fraction image {
  position: relative;
  top: 2px;
  left: -1px;
  width: 16px;
  height: 16px;
}
.shop .shop-area .shop-score__tag {
  margin-left: 8px;
}
.shop .shop-area .shop-describe__left {
  font-size: 11px;
  color: #A3A9B4;
}
.shop .shop-area .shop-describe__left .line::after {
  content: '|';
  margin: 0 10rpx;
}
.shop .shop-area .shop-describe__left .line::before {
  content: '|';
  margin: 0 10rpx;
}
.shop .shop-area .shop-describe__right {
  -webkit-box-flex: 1;
  -webkit-flex: 1;
          flex: 1;
  position: relative;
}
.shop .shop-area .shop-describe__right text {
  position: absolute;
  right: 0px;
  bottom: 0px;
  font-size: 12px;
  color: #7F8590;
